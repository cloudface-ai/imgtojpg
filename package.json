{
  "name": "heic-to-jpg",
  "version": "1.2.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run build:css && node server.js",
    "watch:css": "tailwindcss -i ./src/input.css -o ./public/style.css --watch",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/style.css",
    "build:css:prod": "tailwindcss -i ./src/input.css -o ./public/style.css --minify",
    "build:js": "npx uglify-js public/script.js public/analytics-tracker.js public/blog-integration.js public/footer-updater.js public/blog-manager.js -o public/js.min.js --compress --mangle",
    "build:js:individual": "npm run minify:script && npm run minify:analytics && npm run minify:blog-integration && npm run minify:footer && npm run minify:blog-manager",
    "minify:script": "npx uglify-js public/script.js -o public/script.min.js --compress --mangle",
    "minify:analytics": "npx uglify-js public/analytics-tracker.js -o public/analytics-tracker.min.js --compress --mangle",
    "minify:blog-integration": "npx uglify-js public/blog-integration.js -o public/blog-integration.min.js --compress --mangle",
    "minify:footer": "npx uglify-js public/footer-updater.js -o public/footer-updater.min.js --compress --mangle",
    "minify:blog-manager": "npx uglify-js public/blog-manager.js -o public/blog-manager.min.js --compress --mangle",
    "build": "npm run build:css:prod && npm run build:js:individual",
    "install-deps": "npm install compression",
    "postinstall": "npm run build || echo 'Build failed, continuing...'",
    "test-deps": "node test-deps.js"
  },
  "dependencies": {
    "archiver": "^5.3.2",
    "bree": "^9.2.4",
    "compression": "^1.8.1",
    "dcraw": "^1.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "heic-convert": "^1.0.6",
    "jimp": "^1.6.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.0",
    "uglify-js": "^3.19.3"
  }
}
